{% extends "base.html.twig" %}

{% block title %}{{parent()}}Projet{% endblock %}

{% block contenu %}

<div class="container-fluid">           
       
    <div class="card mx-auto mb-3" style="max-width: 840px;">
        <div class="row no-gutters">
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-center">{{projet.libelleProj}}</h5>
                    <p class="card-text">Responsable du projet : <small class="text-muted">{{projet.nom|upper}} {{projet.prenom|capitalize}}</small></p> 
                    <p class="card-text">Temps total du projet : {{projet.totalTemps}}h</small></p> 
                    <p class="card-text">Coût total du projet : {{projet.totalCout}}</small></p> 
                </div>
            </div>
        </div>
    </div>


    <div class="row justify-content-center">            
        <h1 class="text-center text-primary p-4">Liste des tâches</h1>        
    </div>     

    <div class="row justify-content-center">            
        <div class="col-8 bg-white p-4 m-0 text-dark"> 
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nom de la tâche</th>
                        <th scope="col">Temps nécessaire</th>
                        <th scope="col">Statut</th>
                        <th scope="col">Coût</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for tache in liste %}
                        <tr class="{{ cycle(['table-secondary', 'table-light'], loop.index0)}}">
                            <td>{{tache.libelleTache}}</td>
                            <td>{{tache.temps_tache}}</td>
                            <td>{{tache.status}}</td>
                            <td>{{tache.cout}}</td>
                            <td><a href="index.php?page=tache&id={{tache.id_tache}}"<span class="material-icons text-dark" title="Voir la tache">find_in_page</span></a></td>
                            <td><a href="index.php?page=listeProjets&id={{tache.id_tache}}"<span class="material-icons text-dark" title="Modifier la tâche'">create</span></a></td>
                            <td><a href="index.php?page=listeProjets&supp={{tache.id_tache}}"<span class="material-icons text-dark" title="Supprimer la tâche">delete</span></a></td>
                        </tr>
                    {% endfor %}
                </tbody>   
            </table>                  
        </div>        
    </div>
</div>

